<% include partials/header %>

  <div class="container py-5 mt-5">
    <div class="row">
      <div class="col-lg-6 col-md-12 mx-auto">
        <div class="card p-4">
          <div class="card-body">
            <h3 class="text-center">Edit Contact</h3>
            <hr>

            <form action="/contacts/<%= contact._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <div class="input-group input-group-lg mb-4">

                  <input type="text" class="form-control" value="<%= contact.firstName %>" name="contact[firstName]" required>
                </div>

                <div class="input-group input-group-lg mb-4">
                  <input type="text" class="form-control" value="<%= contact.lastName %>" name="contact[lastName]" required>
                </div>

                <div class="input-group input-group-lg mb-4">
                  <input type="email" class="form-control" value="<%= contact.email %>" name="contact[email]" required>
                </div>

                <div class="input-group input-group-lg mb-4">
                  <input type="text" class="form-control" value="<%= contact.image %>" name="contact[image]">
                </div>

                <input type="submit" class="btn btn-warning btn-block btn-lg" value="Update">
            </form>

            </div>
          </div>
        </div>
      </div>
    </div>

    <% include partials/footer %>